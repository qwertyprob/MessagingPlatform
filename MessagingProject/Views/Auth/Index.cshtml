@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}


<div class="container">
    <div class="row">
       
        <div class="col-md-12 my-4">
            <h2>Login</h2>

            
            <form asp-action="LoginUser">

                <div class="form-group my-2">
                    <label>Email address</label>
                    <input type="email" name="Email" class="form-control" asp-for="Email" />
                </div>

                <div class="form-group my-2">
                    <label>Password</label>
                    <input type="password" name="Password" class="form-control" asp-for="Password">
                </div>

                <div class="form-group my-3">
                    <button type="submit" name="submit" class="btn btn-primary w-100">Send</button>
                </div>

                <p><a href="/AuthRecoverPassword" class=" text-decoration-none">Forgot password?</a></p>

            </form>

        </div>
    </div>
</div>


