    <link href="~/css/devextreme/dx.light.css" rel="stylesheet" />

    @* Uncomment to use the Gantt control *@ 
    @*<script src="~/js/devextreme/dx-gantt.js"></script>*@

    @* Uncomment to use the Diagram control *@
    @*<script src="~/js/devextreme/dx-diagram.js"></script>*@

    <script src="~/js/devextreme/jquery.js"></script>

    @* Uncomment to use Globalize for localization *@
    @*<script src="~/js/devextreme/cldr.js"></script>*@
    @*<script src="~/js/devextreme/cldr/event.js"></script>*@
    @*<script src="~/js/devextreme/cldr/supplemental.js"></script>*@
    @*<script src="~/js/devextreme/cldr/unresolved.js"></script>*@
    @*<script src="~/js/devextreme/globalize.js"></script>*@
    @*<script src="~/js/devextreme/globalize/message.js"></script>*@
    @*<script src="~/js/devextreme/globalize/number.js"></script>*@
    @*<script src="~/js/devextreme/globalize/currency.js"></script>*@
    @*<script src="~/js/devextreme/globalize/date.js"></script>*@

    @* Uncomment to enable client-side export *@
    @*<script src="~/js/devextreme/jszip.js"></script>*@

    <script src="~/js/devextreme/dx.all.js"></script>

    @* Uncomment to provide geo-data for the VectorMap control *@
    @*<script src="~/js/devextreme/vectormap-data/world.js"></script>*@

    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>

    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/fonts.css">
    <link rel="stylesheet" href="~/css/buttons.css">

    @* Bootstrap *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="icon"       href="~/img/logo/logo_email-blue.png" type="image/png">
    

    <title>Email SMS Marketing</title>
</head>


@{
    var claims = User.Claims;
    var firstname = claims.FirstOrDefault(c => c.Type == "FirstName")?.Value;
    var lastname = claims.FirstOrDefault(c => c.Type == "Surname")?.Value;
}
<body style="background-color:whitesmoke">
    <header>
        <div class="container p-5">
            <div class="row align-items-center">
                <div class="col-6 col-md-4 d-none d-md-block">
                    <a href="/">
                        <img class="w-75 w-md-25 h-auto" src="~/img/logo/logo_email-white.png" alt="Logo">
                    </a>
                </div>
                <div class="col-12 col-md-8 d-flex flex-column justify-content-between align-items-start align-items-md-end mb-2">
                    <span class="fw-bold text-white m-1">INTELECTSOFT</span>

                    <div class="d-flex justify-content-between w-100 d-md-none">
                        <div class="dropdown">
                            <a class="btn btn-no-bg dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @switch (Thread.CurrentThread.CurrentCulture.ToString())
                                {
                                    case "en":
                                        <span>EN</span>
                                        break;

                                    case "ru":
                                        <span>RU</span>
                                        break;

                                    case "ro":
                                        <span>RO</span>
                                        break;

                                    default:
                                        <span>EN</span>
                                        break;
                                }
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="ChangeLanguage" asp-route-language="ru"><img src="~/img/lang/ru.png" width="20" class="me-2"> Русский</a></li>
                                <li><a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="ChangeLanguage" asp-route-language="en"><img src="~/img/lang/eng.png" width="20" class="me-2"> English</a></li>
                                <li><a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="ChangeLanguage" asp-route-language="ro"><img src="~/img/lang/ro.webp" width="20" class="me-2"> Romana</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <a class="btn btn-no-bg dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @lastname @firstname
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item d-flex align-items-center justify-content-start" href="/ProfileInfo"><img src="~/img/icons/settings.png" width="20" class="me-2">@MessagingProject.Resources.Resource.Settings</a></li>
                                <li><a class="dropdown-item d-flex align-items-center justify-content-start" href="#"><img src="~/img/icons/lock.png" width="20" class="me-2">@MessagingProject.Resources.Resource.LockScreen</a></li>
                                <li><a class="dropdown-item d-flex align-items-center justify-content-start " href="/Logout"><img src="~/img/icons/exit.png" width="20" class="me-2">@MessagingProject.Resources.Resource.Exit</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="d-none d-md-flex flex-row gap-2">
                        <div class="dropdown">
                            <a class="btn btn-no-bg dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @switch (Thread.CurrentThread.CurrentCulture.ToString())
                                {
                                    case "en":
                                        <span>EN</span>
                                        break;

                                    case "ru":
                                        <span>RU</span>
                                        break;

                                    case "ro":
                                        <span>RO</span>
                                        break;

                                    default:
                                        <span>EN</span>
                                        break;
                                }
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="ChangeLanguage" asp-route-language="ru"><img src="~/img/lang/ru.png" width="20" class="me-2"> Русский</a></li>
                                <li><a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="ChangeLanguage" asp-route-language="en"><img src="~/img/lang/eng.png" width="20" class="me-2"> English</a></li>
                                <li><a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="ChangeLanguage" asp-route-language="ro"><img src="~/img/lang/ro.webp" width="20" class="me-2"> Romana</a></li>
                            </ul>
                        </div>

                        <div class="dropdown">
                            <a class="btn btn-no-bg dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @lastname @firstname
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item d-flex align-items-center justify-content-start" href="/ProfileInfo"><img src="~/img/icons/settings.png" width="20" class="me-2">@MessagingProject.Resources.Resource.Settings</a></li>
                                <li><a class="dropdown-item d-flex align-items-center justify-content-start" href="#"><img src="~/img/icons/lock.png" width="20" class="me-2">@MessagingProject.Resources.Resource.LockScreen</a></li>
                                <li><a class="dropdown-item d-flex align-items-center justify-content-start " href="/Logout"><img src="~/img/icons/exit.png" width="20" class="me-2">@MessagingProject.Resources.Resource.Exit</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center mt-2 ms-auto" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item d-flex align-items-center me-2">
                        <a class="nav-link btn-no-bg-black" href="/">
                            <img src="~/img/icons/home.png" width="20" class="mb-1" alt="Home">
                            @MessagingProject.Resources.Resource.Dashboard
                        </a>
                    </li>

                    <li class="nav-item dropdown me-4 sm-me-6">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown2" role="button" data-bs-toggle="dropdown">
                            <img src="~/img/icons/sms.png" width="20" class="mb-1" alt="SMS">
                            @MessagingProject.Resources.Resource.SMS
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/SMS/CreateSms">@MessagingProject.Resources.Resource.CreateSMSNewsLetter</a></li>
                            <li><a class="dropdown-item" href="/SMS/SmsNewsLetters">@MessagingProject.Resources.Resource.SMSNewsLetter</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown me-4">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown3" role="button" data-bs-toggle="dropdown">
                            <img src="~/img/icons/email.png" width="20" class="mb-1" alt="Email">
                            E-mail
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Email/SendEmail">@MessagingProject.Resources.Resource.CreateEmailNewsLetter</a></li>
                            <li><a class="dropdown-item" href="/Email/MailingList">@MessagingProject.Resources.Resource.EmailNewsletter</a></li>
                            <li><a class="dropdown-item" href="/Email/TemplateList">@MessagingProject.Resources.Resource.EmailTemplateList</a></li>
                        </ul>
                    </li>

                    <li class="nav-item me-4">
                        <a class="nav-link btn-no-bg-black" href="/Contacts/ContactLists">
                            <img src="~/img/icons/list.png" width="20" class="mb-1" alt="Contact List">
                            @MessagingProject.Resources.Resource.Contats
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()

    <footer class="py-3">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-md-6 text-center text-md-start">
                    <a href="https://intelectsoft.md/ro/email-sms-marketing/" class=" text-decoration-none">
                        © @DateTime.Now.Year Email SMS Marketing. Powered by Intelectsoft
                    </a>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-decoration-none me-2">Privacy policy</a> |
                    <a href="#" class="text-decoration-none ms-2">Terms and conditions</a>
                </div>
            </div>
        </div>
    </footer>


    @* Bootstrap JS *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

   
    @*Custom*@
    <script src="~/js/site.js"></script>
    <script src="~/js/timer.js"></script>
    <script src="~/js/ajax.js"></script>

    
<!-- Remove the jQuery links below -->
<environment names="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
</environment>

<environment names="Staging,Production">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    </environment>

    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        $(document).ready(function () {
            setInterval(checkToken, 30000);
            GetClaimsInfo();
            
        });
            setInterval(() => {
            document.querySelectorAll('.dx-license').forEach(el => el.remove());
        }, 100);

    </script>


</body>
</html>
