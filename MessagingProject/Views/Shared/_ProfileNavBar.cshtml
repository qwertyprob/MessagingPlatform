
<div class="col-md-3 col-12 bg-white">
    <ul class="nav flex-column settings-menu py-2 ">
        <li class="nav-item">
            <a class="nav-link" href="/Profile">@MessagingProject.Resources.Resource.EditProfile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/ChangePassword">@MessagingProject.Resources.Resource.ChangePassword</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/EmailSignature">@MessagingProject.Resources.Resource.EmailSignature</a>
        </li>
    </ul>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        let links = document.querySelectorAll(".settings-menu .nav-link");
        let currentUrl = window.location.pathname;

        links.forEach(link => {
            if (link.getAttribute("href") === currentUrl) {
                link.classList.add("active");
            } else {
                link.classList.remove("active");
            }
        });
    });
</script>