@{
    ViewData["Title"] = "SMS";
    Layout = "_Layout";
}

<div class="container-fluid py-0 md-py-0">
    <div class="row mx-5 px-5">
        <div class="col-12 col-md-10 p-0" style="background:none;border:0px;">
            <h1 style="font-weight:600;">Create SMS</h1>
        </div>

        <div class="col-12 d-flex flex-wrap">
            <!-- Form -->
            <div class="col-12 col-md-6 bg-white p-4">
                <form>
                    <!-- Newsletter Title -->
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" value="Created on 03-18-2025" readonly>
                    </div>

                    <!-- Template Title -->
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Description">
                    </div>

                    <!-- Subject -->
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea type="text" class="form-control" id="inputText" style="height:5em;"></textarea>
                    </div>

                    <!-- Contact List Title -->
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Alias">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Contact List Title">
                    </div>

                    <!-- Checkboxes -->
                    <div class="mb-3 d-flex align-items-center flex-wrap">
                        <input class="form-check-input me-2" type="checkbox" id="sendNow">
                        <label class="form-check-label me-4" for="sendNow">Send Now</label>
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Scheduled Date">
                    </div>

                    <p class="text-danger">* To receive replies, check "Enable Replies"</p>

                    <!-- Buttons -->
                    <div class="d-flex gap-3 justify-content-between flex-wrap">
                        <button type="submit" class="btn btn-success btn-icon w-100 w-md-auto d-flex align-items-center justify-content-center btn-responsive">
                            <img src="~/img/icons/send.svg" alt="Send Icon" width="20"> Send
                        </button>
                        <button type="submit" class="btn btn-primary w-100 w-md-auto d-flex align-items-center justify-content-center gap-2 btn-responsive">
                            <img src="~/img/icons/save.svg" alt="Save Icon" width="20">
                            <span>Save</span>
                        </button>
                    </div>
                </form>
            </div>

            <div class="col-12 col-md-6 bg-white d-flex justify-content-center py-4 position-relative">
                <img src="~/img/src/screen.png" class="img-fluid absolute" alt="Phone Frame" />

                <!-- Chat container -->
                <div id="chat-container" class="position-absolute">
                    <div class="bg-light text-dark p-2 rounded shadow-sm" id="div1" style="border-radius: 35px 35px 35px 55px; word-wrap: break-word; overflow-wrap: break-word; white-space: normal; margin-top: 1em;">
                    </div>
                </div>
            </div>
            

        </div>
    </div>
</div>
<script>
    //Chat
     $(document).ready(function() {
        $('#inputText').on('input', function() {
            var userInput = $(this).val();    

            $('#div1').text(userInput); 

           
            if (userInput === "") {
                document.getElementById('chat-container').style.display = 'none';
            } else {
                document.getElementById('chat-container').style.display = 'block';
            }
        });
    });


</script>

