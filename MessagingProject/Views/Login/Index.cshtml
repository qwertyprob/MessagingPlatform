
@{
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <a href="/Auth/Login"><img src="@Url.Content("~/img/logo/logo_email-blue.png")" alt="logo-blue" class="auth-image" /></a>
</div>



<div class="container">
    <div class="row">
       
        <div class="col-md-12 my-4">
            <h2>Login</h2>

            
            <form>
              
                <div class="form-group my-2">
                    <label>Email adress</label>
                    <input type="email" name="email" class="form-control" required />
                </div>

               
                <div class="form-group my-2">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                

               
                <div class="form-group my-2">
                    <input type="submit" name="submit" class="btn btn-primary w-100" value="Войти">
                </div>

                <p><a href="/Auth/AuthRecoverPassword" class=" text-decoration-none" >Forgot password?</a></p>
                
            </form>
        </div>
    </div>
</div>


