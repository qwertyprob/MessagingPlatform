@{
    Layout = "_Layout";
    ViewData["Title"] = "Profile";

}

@await Html.PartialAsync("_ProfileHead")
<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-10 p-0 " style="background:none;border:0px;">
            <h1 style="font-weight:600;">@MessagingProject.Resources.Resource.Settings</h1>
        </div>
        @await Html.PartialAsync("_ProfileNavBar")

        <div class="col-md-9 col-12 bg-white p-4 d-flex flex-column">
            <h3 class="section-title">@MessagingProject.Resources.Resource.ChangePassword</h3>
            <form>
                <div class="row d-flex flex-column">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Old</label>
                        <input type="password" class="form-control" value="Arsenii">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">New</label>
                        <input type="password" class="form-control" value="Subenok">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Confirm</label>
                        <input type="password" class="form-control" value="eqspertars@gmail.com">
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-success d-flex align-items-center px-2"
                            style="white-space: nowrap; overflow: hidden; width: 6em !important;">
                        <img src="~/img/icons/save.svg" width="20" alt="Save Icon" class="me-1" />
                        <span class="text-center" style="font-size: 14.2px; display: inline-block;">
                            @MessagingProject.Resources.Resource.Save
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>