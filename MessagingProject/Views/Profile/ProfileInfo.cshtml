@model IDictionary<string,string>
@{
    Layout = "_Layout";

}
@await Html.PartialAsync("_ProfileHead")

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-10 p-0 " style="background:none;border:0px;">
            <h1 style="font-weight:600;">Settings</h1>
        </div>
        @await Html.PartialAsync("_ProfileNavBar")

        <div class="col-md-9 col-12 bg-white p-4">
            <h3 class="section-title">Edit Profile</h3>
            <form>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" value="@Model["FirstName"]" disabled>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" value="@Model["LastName"]" disabled>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">E-mail</label>
                        <input type="email" class="form-control" value="@Model["Email"]" disabled>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="text" class="form-control" value="@Model["Phone"]" disabled>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success d-flex align-items-center justify-content-center gap-2 btn-responsive" disabled>
                        <img src="~/img/icons/save.svg" width="16" alt="Save Icon" />
                        <span>Save</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


