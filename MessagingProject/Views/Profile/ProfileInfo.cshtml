@model IDictionary<string,string>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Profile";

}
@await Html.PartialAsync("_ProfileHead")

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-10 p-0 " style="background:none;border:0px;">
            <h1 style="font-weight:600;">@MessagingProject.Resources.Resource.Settings</h1>
        </div>
        @await Html.PartialAsync("_ProfileNavBar")

        <div class="col-md-9 col-12 bg-white p-4">
            <h3 class="section-title">@MessagingProject.Resources.Resource.EditProfile</h3>
            <form>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@MessagingProject.Resources.Resource.Firstname</label>
                        <input type="text" class="form-control" value="@Model["FirstName"]" disabled>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@MessagingProject.Resources.Resource.Lastname</label>
                        <input type="text" class="form-control" value="@Model["LastName"]" disabled>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@MessagingProject.Resources.Resource.Email</label>
                        <input type="email" class="form-control" value="@Model["Email"]" disabled>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@MessagingProject.Resources.Resource.Phone</label>
                        <input type="text" class="form-control" value="@Model["Phone"]" disabled>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-success d-flex align-items-center px-2"
                            style="white-space: nowrap; overflow: hidden; width: 6em !important;" disabled>
                        <img src="~/img/icons/save.svg" width="20" alt="Save Icon" class="me-1" />
                        <span class="text-center" style="font-size: 14.2px; display: inline-block;">
                            @MessagingProject.Resources.Resource.Save
                        </span>
                    </button>
                </div>


            </form>
        </div>
    </div>
</div>



